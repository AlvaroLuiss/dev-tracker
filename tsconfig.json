{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "tailwind.config.js",
    "nativewind-env.d.ts",
    "src/images.d.ts"
  ]
}
